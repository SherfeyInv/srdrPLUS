/= link_to project.name, '#', class: 'accordion-title'
a href='#' class='accordion-title'
  .row
    .column.medium-8
      = project.name
    .column.medium-4
      / This dynamically switches between created_at and updated_at.
      small = "#{ @order.slice(0, 7) } " + time_ago_in_words(project.send(@order.underscore).in_time_zone(current_user.profile.time_zone)) + " ago"

.accordion-content data-tab-content=''

  .row
    .column.medium-7
      span.label.secondary Description:
      .callout.secondary.description = project.description
    .column.medium-5
      .column.row
        span.label.secondary Date Created:
        .callout.secondary = project.created_at.in_time_zone(current_user.profile.time_zone).strftime('%c')
      .column.row
        - if project.publishings.present?
          - if project.publishings.any?(&:approved?)
            span.label.success Date Published:
            .callout.secondary = project.publishings.find(&:approved?).created_at.in_time_zone(current_user.profile.time_zone).strftime('%c')
          - else
            span.label.warning Date Publishing Requested:
            .callout.secondary
              ol
                - project.publishings.each do |publishing|
                  li = publishing.created_at.in_time_zone(current_user.profile.time_zone).strftime('%c') + \
                       " (by: #{ publishing.user.profile.first_name })"

  .row
    .column.medium-7
      .row
        .column.medium-4
          span.label.secondary Key Questions:
          .callout.secondary = Random.rand(5) + 1
        .column.medium-4
          span.label.secondary Studies:
          .callout.secondary = Random.rand(1000) + 1
        .column.medium-4
          span.label.secondary Extraction Forms:
          .callout.secondary = Random.rand(10) + 1
    .column.medium-5
      = link_to 'Edit', edit_project_path(project), class: 'button expanded'

