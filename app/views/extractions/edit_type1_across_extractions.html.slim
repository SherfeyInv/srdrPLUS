javascript:
  /* Make visible only the preview of the selected case. */
  /* Utility function to make preview visible or hide based on selected radio buttons. */
  let check_preview_visibility = function() {
    $( '.extractions_extraction_forms_projects_sections_type1_should_propagate input.radio_buttons' ).each( function() {
      _value = $( this ).val();
      if ( $( this ).is( ':checked' ) ) {
        $( 'table.' + _value ).removeClass( 'hide' );
      } else {
        $( 'table.' + _value ).addClass( 'hide' );
      }
    } );
  };

  check_preview_visibility();
  $( '.extractions_extraction_forms_projects_sections_type1_should_propagate input.radio_buttons' ).click( function() {
    check_preview_visibility();
  } );

  /* Update the preview window when the user selects something from the dropdown. */
