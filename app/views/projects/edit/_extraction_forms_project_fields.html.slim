= f.simple_fields_for(:extraction_form, f.object.extraction_form || f.object.build_extraction_form) do |ef_f|
  .nested-fields.extraction_forms-project-fields
    .links
      = link_to_remove_association f, html_options = { class: 'button warning float-right remove-link',
                                                       data: { confirm: t('confirm') } } do
        i.fi-minus-circle
        =< t('.remove')
    - unless ef_f.object.new_record?
      = link_to 'Build ' + t('.object_name'), edit_extraction_forms_project_path(f.object)
    = ef_f.input :name, required: true, hint: 'Name can\'t be blank', placeholder: 'Extraction Form Name'

