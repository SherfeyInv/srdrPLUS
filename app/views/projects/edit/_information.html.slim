.form-inputs

  fieldset.project-information-fieldset
    legend = t('.project_information_field_set')
    = f.input :name, required: true, hint: 'Name can\'t be blank'
    = f.input :description, label: 'Topic Description'
    = f.input :attribution
    = f.input :methodology_description
    = f.input :prospero, label: 'Prospero Registration ID'
    = f.input :doi, label: 'Document Object ID'
    = f.input :notes
    = f.input :funding_source

  fieldset.project-control
    legend = t('.project_control_field_set')
    = link_to 'Destroy', @project, method: :delete, class: 'button alert', data: { confirm: t('confirm') }
